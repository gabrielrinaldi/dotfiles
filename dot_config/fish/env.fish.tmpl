# Bat
set -x BAT_PAGER "less -RFS"
set -x MANPAGER "sh -c 'sed -u -e \"s/\\x1B\[[0-9;]*m//g; s/.\\x08//g\" | bat -p -lman'"

# Directories
set -x XDG_CONFIG_HOME "$HOME/.config"
set -x XDG_DATA_HOME "$HOME/.local/share"

# Keys
set -x OP_SERVICE_ACCOUNT_TOKEN {{ .opToken | quote }}
set -x HOMEBREW_GITHUB_API_TOKEN {{ onepasswordRead "op://Shell/Homebrew/token" | quote }}
set -x GH_TOKEN {{ onepasswordRead "op://Shell/GitHub/token" | quote }}

# Colima
set -x DOCKER_HOST $(docker context inspect | jq '.[] | select(.Name == "'$(docker context show)'") | .Endpoints.docker.Host' -r)

# Colors
set -x LS_COLORS $(vivid generate catppuccin-mocha)

# Editor
set -x EDITOR nvim
{{ if eq .chezmoi.os "darwin" -}}
set -x VISUAL subl
{{ end -}}

# Eza
set -x EZA_CONFIG_DIR "$HOME/.config/eza"

# FZF theme
set -x FZF_DEFAULT_OPTS " \
--color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#b4befe,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8 \
--color=selected-bg:#45475a \
--multi"

# Starship config
set -x STARSHIP_CONFIG "$HOME/.config/starship/config.toml"
