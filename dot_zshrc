# Do you want red dots to be displayed while waiting for completion?
COMPLETION_WAITING_DOTS="true"

# Git auto-fetch
GIT_AUTO_FETCH_INTERVAL=600

# Starship config
export STARSHIP_CONFIG=$HOME/.config/starship/config.toml

# Load Antidote
source $HOME/.antidote/antidote.zsh
antidote load

# LS Colors
export LS_COLORS=$(vivid generate catppuccin-mocha)

# Editor
export EDITOR=nvim

# OS specific configuration
if [[ "$OSTYPE" == "darwin"* ]]; then
  # Vistual editor
  export VISUAL=subl

  # OrbStack
  source ~/.orbstack/shell/init.zsh 2>/dev/null || :

  # Path
  ## Local bin
  PATH=$HOME/.local/bin:$PATH
  ## Curl
  PATH=/opt/homebrew/opt/curl/bin:$PATH
elif [[ "$OSTYPE" == "linux-gnu" ]]; then

fi

# Aliases
source "$HOME/.config/zsh/aliases.zsh"

# Carapace
source "$HOME/.config/zsh/carapace.zsh"

# Docker
source "$HOME/.config/zsh/docker.zsh"

# FZF
source "$HOME/.config/zsh/fzf.zsh"

# Zellij
source "$HOME/.config/zsh/zellij.zsh"

# Atuin configuration
source "$HOME/.config/zsh/atuin.zsh"

